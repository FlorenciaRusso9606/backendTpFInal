{
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "scripts/**/*.ts"]
}
